@model SongViewModel.Detail
@{
    ViewData["Title"] = Model.Song.VietnameseName;
}
<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body shadow border-0">
                <div class="align-items-center text-center">
                    <div class="embed-responsive embed-responsive-1by1 z-depth-0 p-3">
                        <iframe class="embed-responsive-item"
                                src="https://www.youtube.com/embed/@Model.Song.Id"></iframe>
                    </div>
                    <div class="mt-3">
                        <!--Title-->
                        <h3>@Model.Song.VietnameseName</h3>
                        <p class="text-secondary mb-3">
                            @Model.Song.SimplifiedChineseName
                        </p>
                        <!-- Button trigger modal -->
                        <div class="btn-group">
                            <div type="button" class="btn btn-success" data-toggle="modal" data-target="#album-modal">
                                Album
                                <h4>@Model.Albums.Count</h4>
                            </div>
                            <div type="button" class="btn btn-warning" data-toggle="modal" data-target="#artist-modal">
                                Ca sĩ
                                <h4>@Model.Artists.Count</h4>
                            </div>
                            <div type="button" class="btn btn-danger" data-toggle="modal" data-target="#video-modal">
                                Video
                                <h4>@Model.Videos.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <partial name="~/Views/Shared/Modal/Album.cshtml" model="@Model.Albums" />
                <partial name="~/Views/Shared/Modal/Artist.cshtml" model="@Model.Artists" />
                <partial name="~/Views/Shared/Modal/Video.cshtml" model="@Model.Videos" />
            </div>
        </div>
        <!--Informations-->
        <div class="card mt-3 shadow border">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <div class="mb-0 h6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                    10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Lượt nghe
                    </div>
                    <span class="text-secondary">241</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <div class="m-0 h6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                    10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Đánh giá
                    </div>
                    <div class="row m-0">
                        <div data-toggle="popover" title="Popover title"
                             data-trigger="focus" tabindex="0"
                             data-content="And here's some amazing content. It's very engaging. Right?">
                            <span class="badge badge-primary">👍 34</span>
                        </div>
                        <div data-toggle="popover" title="Popover title"
                             data-trigger="focus" tabindex="0"
                             data-content="And here's some amazing content. It's very engaging. njt?">
                            <span class="badge badge-danger">❤️️ 3</span>
                        </div>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <div class="mb-0 h6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                    10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Tải xuống
                    </div>
                    <a asp-controller="Home"
                       asp-action="Download"
                       asp-route-id="@Model.Song.Id">
                        Xem tại đây
                    </a>
                </li>
            </ul>
        </div>
        <!--Related-->
        <div class="card mt-3 shadow border">
            <div class="card-body text-center">
                <h4 class="mb-3">Đề xuất</h4>
                <div id="related-carousel" class="carousel slide"
                     data-interval="2500" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var firstSong = Model.RelatedSongs.First();
                            <div class="carousel-item active">
                                <a asp-controller="Song"
                                   asp-action="Detail"
                                   asp-route-id="@firstSong.Id">
                                    <img class="shadow p-1 w-75"
                                         style="background-color:blue;"
                                         src="@firstSong.ImageUrl"
                                         alt="@firstSong.VietnameseName" />
                                </a>
                                <h5 class="mt-3">
                                    @firstSong.VietnameseName
                                </h5>
                                <small class="text-secondary">
                                    @firstSong.SimplifiedChineseName
                                </small>
                            </div>
                            if (Model.RelatedSongs.Count < 1) return;
                            foreach (var item in Model.RelatedSongs.Skip(1).Take(4))
                            {
                                <div class="carousel-item">
                                    <a asp-controller="Song"
                                       asp-action="Detail"
                                       asp-route-id="@item.Id">
                                        <img class="shadow p-1 w-75"
                                             style="background-color:blue;"
                                             src="@item.ImageUrl"
                                             alt="@item.VietnameseName" />
                                    </a>
                                    <h5 class="mt-3">
                                        @item.VietnameseName
                                    </h5>
                                    <small class="text-secondary">
                                        @item.SimplifiedChineseName
                                    </small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Content-->
    <div class="col-md-8">
        <div class="nav nav-pills justify-content-center h5 mb-3" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-desc-tab" data-toggle="tab" role="tab"
                href="#nav-desc" aria-controls="nav-desc" aria-selected="true">
                Thông tin
            </a>
            <a class="nav-item nav-link" id="nav-lyric-tab" data-toggle="tab" role="tab"
                href="#nav-lyric" aria-controls="nav-lyric" aria-selected="false">
                Lời nhạc
            </a>
        </div>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-desc"
                    role="tabpanel" aria-labelledby="nav-desc-tab">
                <div id="desc-accordion">
                    <div class="card">
                        <div class="card-header" id="vi-desc-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="true"
                                        data-target="#vi-desc-collapse" aria-controls="vi-desc-collapse">
                                    Tiếng Việt
                                </button>
                            </h5>
                        </div>
                        <div id="vi-desc-collapse" class="collapse show"
                                aria-labelledby="vi-desc-heading" data-parent="#desc-accordion">
                            <div class="card-body">
                                @Model.Song.VietnameseDescription.Replace("\r", "<br />")
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="sc-desc-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="false"
                                        data-target="#sc-desc-collapse" aria-controls="sc-desc-collapse">
                                    Giản thể
                                </button>
                            </h5>
                        </div>
                        <div id="sc-desc-collapse" class="collapse"
                                aria-labelledby="sc-desc-heading" data-parent="#desc-accordion">
                            <div class="card-body">
                                @Model.Song.SimplifiedChineseDescription
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="tc-desc-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="false"
                                        data-target="#tc-desc-collapse" aria-controls="tc-desc-collapse">
                                    Phồn thể
                                </button>
                            </h5>
                        </div>
                        <div id="tc-desc-collapse" class="collapse"
                                aria-labelledby="tc-desc-heading" data-parent="#desc-accordion">
                            <div class="card-body">
                                @Model.Song.TraditionalChineseDescription
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-lyric"
                    role="tabpanel" aria-labelledby="nav-lyric-tab">
                <div id="lyric-accordion">
                    <div class="card">
                        <div class="card-header" id="vi-lyric-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="true"
                                        data-target="#vi-lyric-collapse" aria-controls="vi-lyric-collapse">
                                    Tiếng Việt
                                </button>
                            </h5>
                        </div>
                        <div id="vi-lyric-collapse" class="collapse show"
                                aria-labelledby="vi-lyric-heading" data-parent="#lyric-accordion">
                            <div class="card-body">
                                @Model.Song.VietnameseLyric
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="py-lyric-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="false"
                                        data-target="#py-lyric-collapse" aria-controls="py-lyric-collapse">
                                    Bính âm
                                </button>
                            </h5>
                        </div>
                        <div id="py-lyric-collapse" class="collapse"
                                aria-labelledby="py-lyric-heading" data-parent="#lyric-accordion">
                            <div class="card-body">
                                @Model.Song.PinyinLyric
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="sc-lyric-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="false"
                                        data-target="#sc-lyric-collapse" aria-controls="sc-lyric-collapse">
                                    Giản thể
                                </button>
                            </h5>
                        </div>
                        <div id="sc-lyric-collapse" class="collapse"
                                aria-labelledby="sc-lyric-heading" data-parent="#lyric-accordion">
                            <div class="card-body">
                                @Model.Song.SimplifiedChineseLyric
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="tc-lyric-heading">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" aria-expanded="false"
                                        data-target="#tc-lyric-collapse" aria-controls="tc-lyric-collapse">
                                    Phồn thể
                                </button>
                            </h5>
                        </div>
                        <div id="tc-lyric-collapse" class="collapse"
                                aria-labelledby="tc-lyric-heading" data-parent="#lyric-accordion">
                            <div class="card-body">
                                @Model.Song.TraditionalChineseLyric
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
