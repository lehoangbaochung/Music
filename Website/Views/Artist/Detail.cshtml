@model ArtistViewModel.Detail
@{
    ViewData["Title"] = Model.Artist.Name.Vietnamese;
    var primaryBorderColor = Model.Artist.GetBorderColor();
}
<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body shadow border-0">
                <div class="align-items-center text-center">
                    <img class="rounded-circle p-3 w-75"
                         src="@Model.Artist.ImageUrl"
                         alt="@Model.Artist.Name.Vietnamese"
                         style="background-color:@primaryBorderColor;"
                         id="dropdown" data-toggle="dropdown"
                         aria-haspopup="true" aria-expanded="false" />
                    <!--Dropdown menu-->
                    <ul class="dropdown-menu shadow">
                        <li><a class="dropdown-item" title="Phát tất cả bài hát">Phát</a></li>
                        <li>
                            <a class="dropdown-item"
                               data-toggle="modal" data-target="#error-modal">Theo dõi</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               data-toggle="modal" data-target="#information-modal">
                                Thông tin
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item"
                               data-toggle="modal" data-target="#error-modal">Chia sẻ</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               data-toggle="modal" data-target="#error-modal">Báo cáo</a>
                        </li>
                    </ul>
                    <div class="mt-3">
                        <!--Title-->
                        <h3>@Model.Artist.Name.Vietnamese</h3>
                        <p class="text-secondary mb-3">
                            @Model.Artist.Name.SimplifiedChinese
                        </p>
                        <!-- Button trigger modal -->
                        <div class="btn-group">
                            <div class="btn btn-success" data-toggle="modal" data-target="#song-modal">
                                Bài hát
                                <h4>@Model.Songs.Count</h4>
                            </div>
                            <div class="btn btn-warning" data-toggle="modal" data-target="#album-modal">
                                Album
                                <h4>@Model.Albums.Count</h4>
                            </div>
                            <div class="btn btn-danger" data-toggle="modal" data-target="#video-modal">
                                Video
                                <h4>@Model.Videos.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Informations-->
        <div class="card mt-3 shadow border">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                      10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Tên thật
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                      10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Ngày sinh
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                      10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>Quê quán
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
            </ul>
        </div>
        <!--Related-->
        <div class="card mt-3 shadow border">
            <div class="card-body text-center">
                <h4 class="mb-3">Đề xuất</h4>
                <div id="related-carousel" class="carousel slide"
                     data-interval="2500" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var firstArtist = Model.RelatedArtists.First();
                            <div class="carousel-item active">
                                <a asp-controller="Artist"
                                   asp-action="Detail"
                                   asp-route-id="@firstArtist.Id">
                                    <img class="rounded-circle shadow p-1 w-50"
                                         style="background-color:aqua;"
                                         src="@firstArtist.ImageUrl" loading="lazy"
                                         alt="@firstArtist.Name.Vietnamese" />
                                </a>
                                <h5 class="mt-3">
                                    @firstArtist.Name.Vietnamese
                                </h5>
                                <small class="text-secondary">
                                    @firstArtist.Name.SimplifiedChinese
                                </small>
                            </div>
                            if (Model.RelatedArtists.Count < 1) return;
                            foreach (var artist in Model.RelatedArtists.Skip(1).Take(4))
                            {
                                <div class="carousel-item">
                                    <a asp-controller="Artist"
                                       asp-action="Detail"
                                       asp-route-id="@artist.Id">
                                        <img class="rounded-circle shadow p-1 w-50"
                                             style="background-color:limegreen;"
                                             src="@artist.ImageUrl" loading="lazy"
                                             alt="@artist.Name.Vietnamese" />
                                    </a>
                                    <h5 class="mt-3">
                                        @artist.Name.Vietnamese
                                    </h5>
                                    <small class="text-secondary">
                                        @artist.Name.SimplifiedChinese
                                    </small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Content-->
    <div class="col-md-8">
        <div class="nav nav-pills justify-content-center h5" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-song-tab" data-toggle="tab" role="tab"
               href="#nav-song" aria-controls="nav-song" aria-selected="true">
                Bài hát
            </a>
            <a class="nav-item nav-link" id="nav-album-tab" data-toggle="tab" role="tab"
               href="#nav-album" aria-controls="nav-album" aria-selected="false">
                Album
            </a>
            <a class="nav-item nav-link" id="nav-video-tab" data-toggle="tab" role="tab"
               href="#nav-video" aria-controls="nav-video" aria-selected="false">
                Video
            </a>
        </div>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-song"
                 role="tabpanel" aria-labelledby="nav-song-tab">
                <partial name="~/Views/Shared/Card/Song.cshtml" model="@Model.Songs.Take(15)" />
            </div>
            <div class="tab-pane fade" id="nav-album"
                 role="tabpanel" aria-labelledby="nav-album-tab">
                <partial name="~/Views/Shared/Card/Album.cshtml" model="@Model.Albums.Take(12)" />
            </div>
            <div class="tab-pane fade" id="nav-video"
                 role="tabpanel" aria-labelledby="nav-video-tab">
                <partial name="~/Views/Shared/Card/Video.cshtml" model="@Model.Videos.Take(12)" />
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<partial name="~/Views/Shared/Modal/Song.cshtml" model="@Model.Songs" />
<partial name="~/Views/Shared/Modal/Album.cshtml" model="@Model.Albums" />
<partial name="~/Views/Shared/Modal/Video.cshtml" model="@Model.Videos" />
<partial name="~/Views/Shared/Modal/Information.cshtml" model="@Model.Artist" />
<partial name="~/Views/Shared/Modal/Error.cshtml" />
