@model dynamic
@{ 
    string controllerName = Model.ControllerName;
    string actionName = Model.ActionName;
}
<nav aria-label="alphabet-pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item active">
            <a class="page-link" tabindex="-1"
                asp-controller="@controllerName" asp-action="@actionName" asp-route-id="/">Tất cả</a>
        </li>
        @{
            foreach (var character in Music.Resource.Alphabet.ToUpper().Split(','))
            {
                <li class="page-item">
                    <a class="page-link" 
                       asp-controller="@controllerName" asp-route-id="@character">
                    @character</a>
                </li>
            }
        }
    </ul>
</nav>