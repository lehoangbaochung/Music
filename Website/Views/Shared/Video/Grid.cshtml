@model IEnumerable<Video>

<div class="row">
    @{
        foreach (var item in Model)
        {
            <div class="col-6 col-md-3 col-lg-3 mt-3 mb-3 text-center">
                <a asp-controller="Video" asp-action="Detail" asp-route-id="@item.Id">
                    <img class="shadow p-1 w-75" loading="lazy"
                         style="background-color:blue;"
                         src=@item.ImageUrl
                         alt="@item.Name.Vietnamese" />
                </a>
                <h6 class="mt-3">@item.Name.Vietnamese</h6>
                <small>@item.Name.SimplifiedChinese</small>
            </div>
        }
    }
</div>