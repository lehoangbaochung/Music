@model Base
@{ 
    var vi = Model.Description.Vietnamese.Length < 100 ?
        Model.Description.Vietnamese : Model.Description.Vietnamese.Remove(98) + "...";
    var sc = Model.Description.SimplifiedChinese.Length < 100 ?
        Model.Description.SimplifiedChinese : Model.Description.SimplifiedChinese.Remove(98) + "...";
    var tc = Model.Description.TraditionalChinese.Length < 100 ?
        Model.Description.TraditionalChinese : Model.Description.TraditionalChinese.Remove(98) + "...";
}
<div class="mb-3 mt-3">
    <div class="card shadow">
        <div class="card-body">
            <h5 class="mb-3 text-center">Thông tin</h5>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="nav-vi"
                     role="tabpanel" aria-labelledby="nav-vi-tab">
                    <p data-toggle="modal" data-target="#description-modal">@vi</p>
                </div>
                <div class="tab-pane fade" id="nav-sc"
                     role="tabpanel" aria-labelledby="nav-sc-tab">
                    <p data-toggle="modal" data-target="#description-modal">@sc</p>
                </div>
                <div class="tab-pane fade" id="nav-tc"
                     role="tabpanel" aria-labelledby="nav-tc-tab">
                    <p data-toggle="modal" data-target="#description-modal">@tc</p>
                </div>
            </div>
            <div class="nav nav-pills justify-content-end" role="tablist">
                <a class="nav-item nav-link active" id="nav-vi-tab" data-toggle="tab" role="tab"
                   href="#nav-vi" aria-controls="nav-vi" aria-selected="true" title="Tiếng Việt">
                    VI
                </a>
                <a class="nav-item nav-link" id="nav-sc-tab" data-toggle="tab" role="tab"
                   href="#nav-sc" aria-controls="nav-sc" aria-selected="false" title="Giản thể">
                    SC
                </a>
                <a class="nav-item nav-link" id="nav-tc-tab" data-toggle="tab" role="tab"
                   href="#nav-tc" aria-controls="nav-tc" aria-selected="false" title="Phồn thể">
                    TC
                </a>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="description-modal" tabindex="-1" role="dialog"
     aria-labelledby="description-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="description-modal-label">
                    Thông tin
                </h5>
                <div type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </div>
            </div>
            <div class="modal-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nav-vi-modal"
                         role="tabpanel" aria-labelledby="nav-vi-tab-modal">
                        <p>@Model.Description.Vietnamese</p>
                    </div>
                    <div class="tab-pane fade" id="nav-sc-modal"
                         role="tabpanel" aria-labelledby="nav-sc-tab-modal">
                        <p>@Model.Description.SimplifiedChinese</p>
                    </div>
                    <div class="tab-pane fade" id="nav-tc-modal"
                         role="tabpanel" aria-labelledby="nav-tc-tab-modal">
                        <p>@Model.Description.TraditionalChinese</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="nav nav-pills justify-content-center" role="tablist">
                    <a class="nav-item nav-link active" id="nav-vi-tab-modal" data-toggle="tab" role="tab"
                       href="#nav-vi-modal" aria-controls="nav-vi" aria-selected="true" title="Tiếng Việt">
                        VI
                    </a>
                    <a class="nav-item nav-link" id="nav-sc-tab-modal" data-toggle="tab" role="tab"
                       href="#nav-sc-modal" aria-controls="nav-sc-modal" aria-selected="false" title="Giản thể">
                        SC
                    </a>
                    <a class="nav-item nav-link" id="nav-tc-tab-modal" data-toggle="tab" role="tab"
                       href="#nav-tc-modal" aria-controls="nav-tc-modal" aria-selected="false" title="Phồn thể">
                        TC
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
