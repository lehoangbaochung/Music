@model Video
@{ 
    var id = $"zh{ Model.Id }";
}
<div class="modal fade" tabindex="-1" role="dialog"
     aria-labelledby="modal" aria-hidden="true" id="@id">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <!--Video-->
            <div class="modal-body mb-0 p-0">
                <div class="embed-responsive embed-responsive-16by9 z-depth-1">
                    <iframe class="embed-responsive-item" allowfullscreen
                            src="https://www.youtube.com/embed/@Model.Id"></iframe>
                </div>
            </div>
            <div class="modal-body">
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab-@id" role="tablist">
                        <a class="nav-item nav-link dropdown-toggle active" role="tab" data-toggle="tab"
                           id="nav-information-@id-tab" href="#nav-information-@id"
                           aria-controls="nav-information-@id" aria-selected="true">Thông tin</a>
                        <a class="nav-item nav-link dropdown-toggle" role="tab" data-toggle="tab"
                           id="nav-lyric-@id-tab" href="#nav-lyric-@id"
                           aria-controls="nav-lyric-@id" aria-selected="false">Lời nhạc</a>
                    </div>

                </nav>
                <div class="tab-content" id="nav-tabContent-@id">
                    <div class="tab-pane fade show active" role="tabpanel"
                         id="nav-information-@id" aria-labelledby="nav-information-@id-tab">

                    </div>
                    <div class="tab-pane fade" role="tabpanel"
                         id="nav-lyric-@id" aria-labelledby="nav-lyric-@id-tab">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>