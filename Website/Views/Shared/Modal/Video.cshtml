@model IEnumerable<Video>

<div class="modal fade" id="video-modal" tabindex="-1" role="dialog"
     aria-labelledby="album-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="video-modal-label">Video</h5>
                <div type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    @{
                        foreach (var video in Model)
                        {
                            <div class="col-6 mt-3 mb-3 text-center">
                                <a>
                                    <img class="bd-placeholder-img shadow p-0 w-75"
                                         style="background-color:deeppink;"
                                         src=@video.ImageUrl loading="lazy" 
                                         aria-label="@video.VietnameseName" />
                                </a>
                                <h6 class="mt-3">@video.VietnameseName</h6>
                                <small>@video.SimplifiedChineseName</small>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn btn-primary">Phát tuần tự</div>
                <div class="btn btn-primary">Phát ngẫu nhiên</div>
            </div>
        </div>
    </div>
</div>
