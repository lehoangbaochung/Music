@model IEnumerable<Video>
@{
    if (Model.Count() == 0) return;
}
<div class="modal fade" id="video-modal" tabindex="-1" role="dialog"
     aria-labelledby="album-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="video-modal-label">Video</h5>
                <div type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    @{
                        foreach (var video in Model)
                        {
                            var id = $"zh{ video.Id }";
                            <div class="col-6 mt-3 mb-3 text-center"
                                 data-toggle="modal" data-target="#@id">
                                <a>
                                    <img class="img-fluid shadow p-0 w-75"
                                         src=@video.ImageUrl loading="lazy"
                                         alt="@video.Name.Vietnamese" />
                                </a>
                                <h6 class="mt-3">
                                    @video.Name.Vietnamese
                                </h6>
                                <small>
                                    @video.Name.SimplifiedChinese
                                </small>
                            </div>
                            <partial name="~/Views/Shared/Modal/Player.cshtml" model="@video" />
                        }
                    }
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn btn-primary">Phát tuần tự</div>
                <div class="btn btn-primary">Phát ngẫu nhiên</div>
            </div>
        </div>
    </div>
</div>
