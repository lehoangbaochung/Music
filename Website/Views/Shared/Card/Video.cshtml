@model IEnumerable<Video>

<div class="card shadow m-3">
    <div class="card-body">
        <div class="row">
            @{
                foreach (var song in Model)
                {
                    var id = $"zh{ song.Id }"; 
                    <div class="col-md-4 mt-2 mb-2 w-50">
                        @*<partial name="~/Views/Shared/Player.cshtml" model="@item" />*@
                        <div class="card shadow-sm">
                            <a>
                                <img class="img-fluid" loading="lazy"
                                     src="@song.ImageUrl" alt="video"
                                     data-toggle="modal" data-target="#@id">
                            </a>
                            <div class="card-body d-inline-block">
                                <h6 title="@song.VietnameseName">@song.VietnameseName</h6>
                                <small class="text-muted float-right">@song.SimplifiedChineseName</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        @*<partial name="~/Views/Shared/Partial/Pagination.cshtml" model="@Model" />*@
    </div>
</div>