@model ItemViewModel

<div class="card shadow m-3">
    <div class="card-body">
        <div class="row">
            @{
                foreach (var item in Model.Items)
                {
                    <div class="col-md-4 mt-2 mb-2 w-50">
                        <div class="card shadow-sm" style="word-break:keep-all; word-wrap:hyphenate">
                            <img src="@item.ImageUrl" alt="album" loading="lazy" />
                            <div class="card-body d-inline-block">
                                <h6 title="@item.VietnameseName">@item.VietnameseName</h6>
                                <small class="text-muted float-right">@item.SimplifiedChineseName</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        @{
            if (Model.Items.Count > 0)
            {
                <nav aria-label="nav page">
                    <ul class="pagination justify-content-center mt-3">
                        <li class="page-item disabled">
                            <a class="page-link">&laquo;</a>
                        </li>
                        @{
                            for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i
                                        <span class="sr-only">(current)</span>
                                    </span>
                                </li>
                            }
                        }         
                        <li class="page-item">
                            <a class="page-link" href="#">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            }
        }
    </div>
</div>
