@model NavigationViewModel

<div class="card shadow m-3">
    <div class="card-body">
        <div class="row">
            @{
                foreach (var item in Model.Items)
                {
                    var id = $"v{ item.Id }"; 
                    <div class="col-md-4 mt-2 mb-2 w-50">
                        <div class="modal fade" id="@id" tabindex="-1" role="dialog"
                             aria-labelledby="modal" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-body mb-0 p-0">
                                        <div class="embed-responsive embed-responsive-16by9 z-depth-1">
                                            <iframe class="embed-responsive-item" allowfullscreen
                                                    src="https://www.youtube.com/embed/@item.Id"></iframe>
                                        </div>
                                    </div>
                                    <div class="modal-footer justify-content-start">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card shadow-sm">
                            <a>
                                <img class="img-fluid z-depth-1" loading="lazy"
                                     src="@item.ImageUrl" alt="video"
                                     data-toggle="modal" data-target="#@id">
                            </a>
                            <div class="card-body d-inline-block">
                                <h6 title="@item.VietnameseName">@item.VietnameseName</h6>
                                <small class="text-muted float-right">@item.SimplifiedChineseName</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <partial name="~/Views/Shared/Partial/Pagination.cshtml" model="@Model" />
    </div>
</div>