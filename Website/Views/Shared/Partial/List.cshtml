@model ItemViewModel

<div class="card shadow m-3">
    <div class="card-body">
        @{
            int index = 1;
            foreach (var item in Model.Items)
            {
                <div class="row">
                    <div class="col-sm-2">
                        <h6>@index</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6>@item.VietnameseName</h6>
                    </div>
                    <div class="col-sm-4 text-secondary">
                        @item.SimplifiedChineseName
                    </div>
                </div>
                <hr />
                index++;
            }

            if (Model.Items.Count > 0)
            {
                <nav aria-label="page navigation">
                    <ul class="pagination justify-content-center">
                        @{
                            for (int i = index; i <= Model.PageCount; i++)
                            {
                                <li class="page-item">
                                    <a class="page-link">@i</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            }
        }
    </div>
</div>
