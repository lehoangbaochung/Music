@model IEnumerable<Artist>

<div class="row">
    @{
        foreach (var item in Model)
        {
            <div class="col-6 col-sm-6 col-md-3 col-lg-3 mt-2 mb-2 text-center">
                <a asp-controller="Artist" asp-action="Detail" asp-route-id="@item.Id">
                    <img class="bd-placeholder-img rounded-circle shadow p-1 w-75"
                         src=@item.ImageUrl loading="lazy" aria-label="artist" />
                </a>
                <h6 class="mt-3">@item.Name.Vietnamese</h6>
                <small>@item.Name.SimplifiedChinese</small>
            </div>
        }
    }
</div>