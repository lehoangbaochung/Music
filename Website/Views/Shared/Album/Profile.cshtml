@model Album

<div class="card">
    <div class="card-body shadow border-0">
        <div class="text-center">
            <img class="p-2 w-75"
                 src="@Model.ImageUrl"
                 alt="@Model.Name.Vietnamese"
                 style="background-color:blue;"
                 id="dropdown" data-toggle="dropdown"
                 aria-haspopup="true" aria-expanded="false" />
            <!--Dropdown menu-->
            <ul class="dropdown-menu shadow">
                <li>
                    <a class="dropdown-item"
                       title="Phát tất cả bài hát trong album">Phát</a>
                </li>
                <li>
                    <a class="dropdown-item"
                       title="Tải xuống tất cả bài hát trong album">Tải xuống</a>
                </li>
                <li>
                    <a class="dropdown-item"
                       data-toggle="modal" data-target="#information-modal">
                        Thông tin
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>

                <li>
                    <a class="dropdown-item">Chia sẻ</a>
                </li>
            </ul>
            <div class="mt-3">
                <!--Title-->
                <h3>@Model.Name.Vietnamese</h3>
                <p class="text-secondary mb-3">
                    @Model.Name.SimplifiedChinese
                </p>
                <!-- Button trigger modal -->
                <div class="btn-group">
                    <div class="btn btn-success"
                         data-toggle="modal" data-target="#song-@Model.Id-modal">
                        Bài hát
                        <h4>@Model.GetSongs().Count</h4>
                    </div>
                    <div class="btn btn-warning"
                         data-toggle="modal" data-target="#artist-@Model.Id-modal">
                        Ca sĩ
                        <h4>@Model.GetArtists().Count</h4>
                    </div>
                    <div class="btn btn-danger"
                         data-toggle="modal" data-target="#video-@Model.Id-modal">
                        Video
                        <h4>@Model.GetVideos().Count</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
