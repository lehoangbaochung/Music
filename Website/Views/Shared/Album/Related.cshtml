@model IEnumerable<Album>

<div class="card mt-3 shadow border">
    <div class="card-body text-center">
        <h4 class="mb-3">Đề xuất</h4>
        <div id="related-carousel" class="carousel slide"
                data-interval="2500" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var firstAlbum = Model.First();
                    <div class="carousel-item active">
                        <a asp-controller="Album"
                            asp-action="Detail"
                            asp-route-id="@firstAlbum.Id">
                            <img class="shadow p-1 w-50"
                                    style="background-color:green;"
                                    src="@firstAlbum.ImageUrl"
                                    alt="@firstAlbum.Name.Vietnamese" />
                        </a>
                        <h5 class="mt-3">
                            @firstAlbum.Name.Vietnamese
                        </h5>
                        <small class="text-secondary">
                            @firstAlbum.Name.SimplifiedChinese
                        </small>
                    </div>
                    if (Model.Count() < 1) return;
                    foreach (var item in Model.Skip(1).Take(4))
                    {
                    <div class="carousel-item">
                        <a asp-controller="Album"
                            asp-action="Detail"
                            asp-route-id="@item.Id">
                            <img class="shadow p-1 w-50"
                                    style="background-color:green;"
                                    src="@item.ImageUrl"
                                    alt="@item.Name.Vietnamese" />
                        </a>
                        <h5 class="mt-3">
                            @item.Name.Vietnamese
                        </h5>
                        <small class="text-secondary">
                            @item.Name.SimplifiedChinese
                        </small>
                    </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
