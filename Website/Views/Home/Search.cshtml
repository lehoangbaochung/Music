@model ProfileViewModel
@{
    ViewData["Title"] = Model.PrimaryItem.Title;
    Layout = "~/Views/Shared/Layout/Index.cshtml";
    var primaryItem = Model.PrimaryItem;
    var secondaryItem = Model.SecondaryItem;
}
<div class="row gutters-sm">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body shadow border-0">
                <div class="align-items-center text-center">
                    <img src="@primaryItem.ImageUrl" alt="@primaryItem.Title"
                         class="rounded-circle p-3 w-75" 
                         style="background-color:@primaryItem.ColorName;" />
                    <div class="mt-3">
                        <h3>@primaryItem.Title</h3>
                        <p class="text-secondary mb-3">@primaryItem.Subtitle</p>
                        @{
                            foreach (var summary in Model.Parameters)
                            {
                                <a class="btn btn-@summary.ColorName" href="">@summary.Title
                                    <h4>@summary.Subtitle</h4>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 shadow border">
            <ul class="list-group list-group-flush">
                @foreach (var information in Model.Informations)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <h6 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="feather feather-globe mr-2 icon-inline">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="2" y1="12" x2="22" y2="12"></line>
                                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4
                                      10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                            </svg>
                            @information.Title
                        </h6>
                        <span class="text-secondary">@information.Subtitle</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0 text-info justify-content-between">Thông tin thêm</h6>
                    <pre></pre>
                </li>
            </ul>
        </div>
        <!-- Related artists -->
        <div class="card mt-3 shadow border">
            <div class="card-body text-center">
                <h4 class="mb-3">Đề xuất</h4>
                @{
                    <div>
                        <a asp-controller="@secondaryItem.Hyperlink.Controller"
                            asp-action="@secondaryItem.Hyperlink.Action"
                            asp-route-id="@secondaryItem.Hyperlink.Id">
                            <img class="rounded-circle shadow p-1 w-50"
                                    style="background-color:@secondaryItem.ColorName;"
                                    aria-label="artist" src="@secondaryItem.ImageUrl" />
                        </a>
                        <h5 class="mt-3">@secondaryItem.Title</h5>
                        <p class="text-secondary">@secondaryItem.Subtitle</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-8">
        @RenderBody()
    </div>
</div>
