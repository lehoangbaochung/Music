@{
    ViewData["Title"] = ViewBag.Artist.VietnameseName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row gutters-sm">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body shadow border-0">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@ViewBag.Artist.ImageUrl" alt="avatar"
                         class="rounded-circle p-3" width="250" height="250"
                         href="#" style="background-color:limegreen;"/>
                    <div class="mt-3">
                        <h3>@ViewBag.Artist.VietnameseName</h3>
                        <p class="text-secondary mb-3">@ViewBag.Artist.SimplifiedChineseName</p>
                        <button class="btn btn-success">Bài hát<h4>@ViewBag.Songs.Count</h4></button>
                        <button class="btn btn-warning">Album<h4>@ViewBag.Albums.Count</h4></button>
                        <button class="btn btn-danger">Video<h4>@ViewBag.Videos.Count</h4></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 shadow border">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>
                        Tên thật
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="feather feather-github mr-2 icon-inline">
                            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                        </svg>
                        Ngày sinh
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                        Cung
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                        Giới tính
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                        Quê quán
                    </h6>
                    <span class="text-secondary">Đang cập nhật</span>
                </li>
            </ul>
        </div>
        <!-- Related artists -->
        <div class="card mt-3 shadow border">
            <div class="card-body shadow border-0 text-center">
                <h4 class="mb-3">Ca sĩ liên quan</h4>
                <div class="col-lg-auto">
                    <a asp-controller="Home" asp-action="Artist" asp-route-id="@ViewBag.RelatedArtist.Id">
                        <img class="rounded-circle shadow p-1"
                             style="background-color:turquoise;"
                             width="150" height="150" aria-label="artist" 
                             src="@ViewBag.RelatedArtist.ImageUrl" />
                    </a>
                    <h5 class="mt-3">@ViewBag.RelatedArtist.VietnameseName</h5>
                    <p class="text-secondary mb-3">@ViewBag.RelatedArtist.SimplifiedChineseName</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <!-- Song -->
        <div class="row">
            <h4 class="col-md-2">Bài hát</h4>
            <a class="col-md-10 mt-1 text-md-right">Xem tất cả</a>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                @{
                    foreach (var song in ViewBag.RecentSongs)
                    {
                        <div class="row">
                            <div class="col-sm-1">
                                <h6>@song.Id</h6>
                            </div>
                            <div class="col-sm-6">
                                <h6>@song.VietnameseName</h6>
                            </div>
                            <div class="col-sm-4 text-secondary">
                                @song.SimplifiedChineseName
                            </div>
                            <div class="col-sm-1">
                                <a class="btn btn-info">></a>
                            </div>
                        </div>
                        <hr />
                    }
                }
                <div class="mt-3 text-center">
                    <a class="btn btn-info align-content-center m-0">Phát tất cả</a>
                    <a class="btn btn-info align-content-center m-0">Phát ngẫu nhiên</a>
                    <a class="btn btn-info align-content-center m-0">Tải xuống</a>
                </div>
            </div>
        </div>
        <!-- Album -->
        <div class="row">
            <h4 class="col-md-2">Album</h4>
            <a class="col-md-10 mt-1 text-md-right">Xem tất cả</a>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    @{ 
                        foreach (var album in ViewBag.RecentAlbums) 
                        { 
                            <div class="col-md-4 mb-3">
                                <div class="card shadow-sm">
                                    <img src="@album.ImageUrl" alt="album" />
                                    <div class="card-body">
                                        <h6>@album.VietnameseName</h6>
                                        <small class="text-muted float-right">@album.SimplifiedChineseName</small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <!-- Video -->
        <div class="row">
            <h4 class="col-md-2">Video</h4>
            <a class="col-md-10 mt-1 text-md-right">Xem tất cả</a>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    @{
                        foreach (var video in ViewBag.RecentVideos)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card shadow-sm">
                                    <img src="@video.ImageUrl" alt="video" />
                                    @*<div class="card-body">
                                        <h6>@video.VietnameseName</h6>
                                        <small class="text-muted float-right">@video.SimplifiedChineseName</small>
                                    </div>*@
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>